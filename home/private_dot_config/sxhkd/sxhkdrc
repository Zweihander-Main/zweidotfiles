# Restart sxhkd
super + Escape
    pkill sxhkd && sxhkd &

# Session management
super + alt + l
    loginctl lock-session

# Audio
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioPlay
    playerctl play-pause

XF86AudioStop
    playerctl stop

XF86AudioPrev
    playerctl previous

XF86AudioNext
    playerctl next

alt + shift + F12
    toggle_sink

# mouse only setup
super + apostrophe
    xmouseless

# Dunst
super + q
    dunstctl close

super + shift + q 
    dunstctl close-all

super + grave 
    dunstctl history-pop

super + shift + grave
    dunstctl context

# Print screen
Print
    flameshot gui

shift + Print
    flameshot screen -c

ctrl + Print
    flameshot full -c


# User programs
ctrl + alt + shift + c
    chromium

ctrl + alt + shift + e
    XMODIFIERS=@im=none emacs

ctrl + alt + shift + t
    thunderbird

ctrl + alt + shift + a
    gtk-launch anki.desktop

ctrl + alt + shift + v
    vscodium

ctrl + alt + shift + o
    obs --disable-component-update
